@model Dz4zad1.Models.ModelPublisher
@using Dz4zad1.Models
@{
    Layout = null;
    Publisher pub = ViewBag.Publisher;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/Style.css" />
    <title>Edit</title>
</head>
<body class="div_backgraund">
<div class="menu">
    @Html.ActionLink("Create Publicher", "Index")
    @Html.ActionLink("Table Publishers", "Show_Table")
    @Html.RouteLink("Create Author", new { controller = "Author", action = "Index" })
    @Html.RouteLink("Table Authors", new { controller = "Author", action = "Show_Table" })
    @Html.RouteLink("Create Book", new { controller = "Book", action = "Index" })
    @Html.RouteLink("Table Book", new { controller = "Book", action = "Show_Table" })
</div>
<div class="position">
    <div class="div_img">
        <img src="~/Images/Publisher-icon.png"/>
    </div>
    <div class="forma">
        @using (Html.BeginForm())
        {
            if (pub != null)
            {
                <h3 class="h3">Edit Publisher</h3>
                @Html.ValidationSummary()
                <div class="section">
                    <p>Name:</p>
                    <div class="Text">@Html.TextBox("Name", pub.Name)</div>
                </div>
                <input class="buttom" type="submit" name="@pub.Id" value="Edit"/>
            }
        }
    </div>
</div>
</body>
</html>
